{
  "name": "vichrome",
  "version": "0.1",
  "description": "vi like key bind for chrome",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "bookmarks",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
             "keys.js",
             "utils.js",
             "content_script.js"
            ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
