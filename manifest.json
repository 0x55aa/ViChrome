{
  "name": "vichrome",
  "version": "0.1",
  "description": "vi like key bind for chrome",
  "background_page": "background.html",
  "options_page": "options.html",
  "icons":{
    "16" :"icons/16.png",
    "48" :"icons/48.png",
    "128":"icons/128.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
          "css/vichrome.css"
      ],
      "js": [
          "vichrome.js",
          "utils.js",
          "lib/jquery.js",
          "lib/jquery.highlight-3.js",
          "key.js",
          "register.js",
          "view.js",
          "search.js",
          "mode.js",
          "settings.js",
          "command.js",
          "eventhandler.js",
          "model.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
